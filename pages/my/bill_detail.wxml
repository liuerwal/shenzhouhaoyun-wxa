<view class="public-bg">
    <view class="bill-head">
        <text class="money fl-left">交易金额</text>
        <text class="main-color fl-right">￥{{ bill.amount }}</text>
    </view>   
    <view class="account_list list-box">
        <!-- <view class="list_info">
            <text class="list-left fl-left">类型</text>
            <text class="list-right">收入</text>
        </view> -->
        <view class="list_info">
            <text class="list-left fl-left">当前状态</text>
            <text class="list-right">{{ bill.status }}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">支付方式</text>
            <text class="list-right">{{ bill.pay_with }}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">支付账号</text>
            <text class="list-right">{{ bill.pay_by }}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">商品单号</text>
            <text class="list-right">{{ bill.order_no }}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">订单说明</text>
            <text class="list-right">{{ bill.description }}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">交易时间</text>
            <text class="list-right">{{ bill.created_at }}</text>
        </view>
    </view>
</view>
