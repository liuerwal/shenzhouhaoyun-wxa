.coupon-box{padding:15px; background: #f5f5f5;height:100%;}
.coupon-info{background: #fff;border-radius:5px;box-shadow:0px 1px 4px #ccc;margin-bottom: 20px;}
.coupon-title image{width:30px;height:30px;border-radius:50%;float: left;}
.coupon-title{padding:10px 0 0 10px;}
.coupon-title view{font-size: 14px;line-height: 30px;padding-left:40px;}
.discount{padding-left:50px;font-size: 16px;font-weight: bold;}
.coupon-time{padding:5px 10px;border-top:1px dashed #e7e7e7;font-size:12px;margin-top:10px;}