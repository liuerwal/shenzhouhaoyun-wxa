<!--index.wxml-->
<view class="container">
	<form bindsubmit="formSubmit" bindreset="formReset">
	<view class="section oil-cash">
			<view class="section__title">加油金额</view>
			<input placeholder="400起加" />
		</view>
		<view class="Oil-type">
			<button bindtap="aa">97#汽油</button>
			<button>97#汽油</button>
			<button>97#汽油</button>
			<button>97#汽油</button>
			<button>97#汽油</button>
		</view>
		<view class="cash-box">
			<view class="all-cash fl-left">总余额：￥0.00</view>
			<view class="Frozen-cash fl-right">冻结金额：￥0.00</view>
			<text>自动冻结金额1000元</text>
		</view>
		<view  class="section">
			<picker mode="region" bindchange="bindRegionChange" value="{{region}}" class="region">
				<view class="picker">
					当前地址 ： {{region[0]}}，{{region[1]}}，{{region[2]}}
				</view>
			</picker>
			<view class="detailed-info">
				<view>请输入详细地址：</view>
				<input placeholder="详细地址" class=""/>
			</view>
		</view>
		<view class="section">
			<view class="section__title">选择时间</view>
			<picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange" class="time">
				<view class="picker">{{date}}
				</view>
			</picker>
		</view>
		<view class="section">
			<view class="section__title">联系手机</view>
			<input placeholder="请填写现场人员电话" />
		</view>
		<view class="section">
			<view class="section__title">备注信息</view>
			<input placeholder="请填写备注信息" />
		</view>
		
	</form>
	<button class="submit-order">提交订单</button>
</view>
