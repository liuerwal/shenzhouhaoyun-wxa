/**index.wxss**/
.cash-box{overflow: hidden;padding:0 15px;}
.cash-box text{clear: both;border-top:1px solid #e5e5e5;padding:10px 0;display: block;color: #a9a9a9;}
.submit-order{z-index:10;position:fixed;bottom:0px;right:0;width: 100%;font-size: 14px;border-radius:0;background: #F13D3C;color: #fff;border:none;line-height:40px;}
.returnorder{z-index:10;position:fixed;bottom:0px;left:0;width: 50%;font-size: 14px;border-radius:0;background: #aaaaaa;color: #fff;border:none;line-height:40px;}
form{margin-bottom: 100px;height: 100%;}
.time{margin-top:10px;}
.detailed-info input{width: 100%;}
.Frozen-cash {margin-right: 15px;}
.oiltype{position: relative;}
.unit-price{font-size: 13px;position:absolute; right:10px;top:3px; }
.we-left input{width:40px;}
.we-left .section__title{width:40px;}
.phone-right input{width:110px;}
.phone-right .section__title{width:70px;}
.addr-box .section:first-child{border:none;}
.addr-box .section:last-child{border-bottom: 1px solid #e5e5e5;}
.form-box .section{margin-left:0;background: #fff;}
.detailed-info view,.detailed-info picker,.main-color,.all-cash,.form-box .section__title{margin-left:15px;}
.form-box{background:#eeeff3;}
button::after{content:none;}

.m-box{background: #fff;overflow: hidden;margin-top: 10px;}
.m-info,.address-btn{padding:15px;overflow: hidden;}
.m-address{display: block;clear: both;line-height: 28px;padding-top:10px;}
.m-name{width:90%;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;}
.link{padding-top:0;float:right;margin-top:5px;font-size:12px;}

.radio-group{width:94%;margin: 0 auto;display: flex;background: #fff;padding:15px 3%;margin-bottom: 20px;}
.radio-group .radio{margin-right:20px;display: flex;align-items: center;}
.all-cash{width:160px;overflow: hidden;}

.m-phone{font-size: 18px;}
.notice{padding:10px 15px;}
.notice text{display: inline-block;line-height: 24px;}
.notice-addr{padding-left:35px;}

.m-box.section{border-top:1px solid #e5e5e5;padding:2px 0;}
.section:last-child{border-top:1px solid #e5e5e5;}

.addrs-box .m-box{margin:0;border-bottom:1px solid #e5e5e5; }
/*.addrs-box{margin-bottom: 10px;position: fixed;bottom:0;width:100%;}*/
.addr-btn{padding:40px 0;}

.service-time{margin-top:10px;}

.choose-add{background:#fff;padding:14px 10px;margin-top:10px;}
.choose-add text{width:200px;
display:inline-block;
}
.choose-add .select-arrow{
    display: inline-block;
}
.choose-add .select-arrow:after{
    content: " ";
    display: inline-block;
    width: 5px;
    height: 5px;
    border:#999 solid;
    border-width: 1px 1px 0 0;
    transform: rotate(135deg);
    margin-bottom: 5px;
}
/*mask*/  
.drawer_screen {  
  width: 100%;  
  height: 100%;  
  position: fixed;  
  top: 0;  
  left: 0;  
  z-index: 1000;  
  background: #000;  
  opacity: 0.2;  
  overflow: hidden;  
}  
/*content*/  
.drawer_attr_box {  
  width: 96%;  
  height: 96%;
  overflow: auto;  
  position: fixed;  
  top: 2%;  
  left: 2%;  
  z-index: 1001;  
  background: #fff;  
}  
.drawer_content {  
  padding: 20rpx 40rpx;  
  height: 470rpx;  
  overflow-y: scroll;  
}  
.drawer_title{  
  padding:20rpx;  
  font:42rpx "microsoft yahei";  
  text-align: center;  
}  
.line{  
  border-bottom: 1px solid #f8f8f8;  
}  


