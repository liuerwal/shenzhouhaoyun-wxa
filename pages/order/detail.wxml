<!--Order details.wxml-->
<view class="container">
	<view class="order-box">
		<view class="order-info">
			<view><text class="order-stitle">油品</text>: {{order.order_oil.oil.name}}</view>
            <view><text class="order-stitle">运费</text>: {{order.amount}}</view>
			<view><text class="order-stitle">重量</text>: {{order.order_oil.weight}}</view>
			<view><text class="order-stitle">订单号</text>: {{order.order_no}}</view>
            <view><text class="order-stitle">下单时间</text>: {{order.created_at}}</view>
			<view><text class="order-stitle">订单状态</text>: {{order.order_oil.status_text}}</view>

            <block wx:if="{{order.order_oil.status < 3}}">
                <button bindtap="orderCancel">取消</button>
            </block>

		</view>
	</view>

    <block wx:if="{{order.order_oil.waybill}}" >
        <view class="order-box">
            <view class="order-info">
                <view><text class="order-stitle">司机</text>: {{order.order_oil.waybill.driver.username}}</view>
                <view><text class="order-stitle"> </text>  {{order.order_oil.waybill.driver.phone}}</view>

            </view>
        </view>
    </block>
</view>
