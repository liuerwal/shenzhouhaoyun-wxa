<view class="public-bg">
	<view class="account_list list-box">
		<view class="list-title">订单详情</view>
		<view class="list_info">
			<text class="list-left fl-left">订单号</text>
			<text class="list-right"> {{order.order_no}}</text>
		</view>
		<view class="list_info">
			<text class="list-left fl-left">重量</text>
			<text class="list-right"> {{order.weight}}吨</text>
		</view>
		<view class="list_info">
			<text class="list-left fl-left">油品</text>
			<text class="list-right"> {{order.oil}}</text>
		</view>
		<view class="list_info">
			<text class="list-left fl-left">油费</text>
			<text class="list-right"> {{order.detail.amount}}</text>
		</view>
		<view class="list_info">
			<text class="list-left fl-left">运费</text>
			<text class="list-right"> {{order.detail.freight}}</text>
		</view>
		<view class="list_info" wx:if="{{ order.detail.discount }}">
			<text class="list-left fl-left">优惠券</text>
			<text class="list-right"> {{order.detail.discount}}</text>
		</view>
		<view class="list_info">
			<text class="list-left fl-left">总计</text>
			<text class="list-right"> {{order.amount}}</text>
		</view>
	</view>

	<view class="pay-btn">
		<button class="online-btn fl-left btn-big btn" bindtap="payOnline">微信支付</button>
		<button wx:if="{{ order.use_fund }}" class="fl-right btn deposit" bindtap="payDeposit">余额支付</button>
		<button class="line-btn fl-left" bindtap="payCash">线下支付</button>
	</view>

	<!-- <button class="submit-order btn" bindtap="pay">确认支付</button> -->
</view>

