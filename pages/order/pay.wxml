<view class="public-bg">

	<view class="order-box">
		<view><text>油费</text>:  {{order.detail.amount}}</view>
		<view><text>运费</text>:  {{order.detail.freight}}</view>
		<view><text>押金</text>:  {{order.detail.frozen}}</view>
		<view><text>总计</text>:  {{order.amount}}</view>

		
	</view>

	<view class="pay-btn">

		<button wx:if="{{ order.use_fund }}" class="line-btn fl-right" bindtap="payDeposit">余额支付</button>
		<button class="online-btn fl-left" bindtap="payOnline">微信支付</button>
		<button class="line-btn fl-right" bindtap="payCash">线下支付</button>
	</view>

	<!-- <button class="submit-order btn" bindtap="pay">确认支付</button> -->
</view>

