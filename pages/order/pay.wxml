<view class="public-bg">
    <view class="account_list list-box">
        <view class="list-title">订单详情</view>
        <view class="list_info">
            <text class="list-left fl-left">订单号</text>
            <text class="list-right"> {{order.order_no}}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">油品</text>
            <text class="list-right"> {{order.oil}}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">重量</text>
            <text class="list-right"> {{order.weight}}吨</text>
        </view>

        <block wx:for="{{ order.address }}" wx:key="addr" wx:for-item="addr">
            <view class="list_info">
                <text class="list-left fl-left">地址</text>
                <text class="list-right"> {{ addr.address }} </text>
            </view>
            <view class="list_info">
                <text class="list-left fl-left">手机</text>
                <text class="list-right"> {{ addr.phone }} </text>
            </view>
        </block>
        <view class="list_info">
            <text class="list-left fl-left">备注</text>
            <text class="list-right"> {{ order.note }} </text>
        </view>
        
        <view class="list_info">
            <text class="list-left fl-left">油费</text>
            <text class="list-right"> {{order.detail.amount}}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">运费</text>
            <text class="list-right"> {{order.detail.freight}}</text>
        </view>
        <view class="list_info" wx:if="{{ order.detail.discount }}">
            <text class="list-left fl-left">优惠券</text>
            <text class="list-right"> {{order.detail.discount}}</text>
        </view>
        <view class="list_info">
            <text class="list-left fl-left">总计</text>
            <text class="list-right"> {{order.amount}}</text>
        </view>
    </view>

    <view class="pay-content">
    	<view class="pay-title">请选择支付方式</view>
		<radio-group class="radio-group" name="radio-group">
        	<view class="pay-info">
        		<image src="../../asset/img/wechat-pay.png" class="icon"></image>
                <view class="pay-intro">
                    <view>微信支付</view>
                    <text>亿万用户的选择，更快更安全</text>
                </view>
                
        		<!-- <button class="online-btn fl-left btn-big btn" data-paywith="payOnline" bindtap="choose">微信支付</button> -->
        		<label class="radio" >
                    <radio value="" name='pay' checked="true"/>
                </label>
        	</view>
        	<view class="pay-info">
        		<image src="../../asset/img/cash-pay.png" class="icon"></image>
                <view class="pay-intro">
                    <view>余额支付</view>
                    <text>使用余额进行付款</text>
                </view>
        		<!-- <button class="online-btn fl-left btn-big btn" data-paywith="payOnline" bindtap="choose">余额支付</button> -->
        		<label class="radio" >
                    <radio value="" name='pay' />
                </label>
        	</view>
        	<view class="pay-info">
        		<image src="../../asset/img/boss-pay.png" class="icon boss-pay"></image>
                <view class="pay-intro">
                    <view>老板支付</view>
                    <text>老板支付,</text>
                </view>
        		<!-- <button class="online-btn fl-left btn-big btn" data-paywith="payOnline" bindtap="choose">老板支付</button> -->
        		<label class="radio" >
                    <radio value="" name='pay'/>
                </label>
        	</view>
            
        <!-- <button wx:if="{{ order.use_fund }}" class="fl-right btn deposit" data-paywith="payDeposit" bindtap="choose">余额支付</button> -->
        <!-- <button class="line-btn fl-left" bindtap="payCash">线下支付</button> -->
        <!-- <button class="line-btn fl-left" wx:if="{{ haveBoss }}" disabled="{{ disabled }}" data-paywith="payBoss" bindtap="choose">老板支付</button> -->
        </radio-group>
    </view>

    <!-- <button class="submit-order btn" bindtap="pay">确认支付</button> -->

    <!-- <view class="public-mask" hidden="{{ pay_choose_box }}"> -->
    <view class="public-mask" >
        <view class="mask-content">
            <view class="mask-title">余额支付</view>
            <view class="mask-money">￥11.00</view>
            <view class="mask-info" bindtap="focus_pswd" >
                <block wx:for="{{view_pswd}}" wx:key="1">
                    <text>{{item}}</text>
                    <!-- <text></text>
                    <text></text>
                    <text></text>
                    <text></text>
                    <text></text> -->
                    </block>
            </view>
            <input type="text" class="mask-pswd" maxlength="6" focus="{{fous_input}}" value="{{pay_pswd}}" bindinput="bindpswdblur"/>
           
            <button class="btn" bindtap="pay">支付</button>
        </view>
    </view>

    <view class="pay-btn">
        <button class="payAll" bindtap="payAll">一次性付款(总计 {{order.amount}}元)</button>
        <button class="payFreight" bindtap="payFreight">货到付款(运费{{order.detail.freight}}元)</button>
    </view>

</view>

