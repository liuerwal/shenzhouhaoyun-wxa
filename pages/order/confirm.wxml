<!--index.wxml-->
<view  class="public-bg order"  style="height:{{winHeight}}px">
    <form bindsubmit="formSubmit" bindreset="formReset">

        <radio-group class="radio-group" name="radio-group">
        <label class="radio">线下支付</label>
        <label class="radio" >
            <radio value="1" checked="" name='pay_cash'/><text>是</text>
        </label>
        <label class="radio">
            <radio value="0" checked="true" name='pay_cash'/><text>否</text>
        </label>
    </radio-group>

    <view class="form-box">
        <view class="section">
            <view class="section__title">重量</view>
            <input type="number" placeholder="吨" name="weight" value="{{weight}}" bindinput="oilCost" />
        </view>

        <view class="section">
            <view class="picker">
                <view class="section__title">油料</view>
                <picker bindchange="bindOilChange" value="0" range="{{oil_type}}" range-key="name">
                    <input value="{{oil_type[current_oil].name}}" name="oil_id"/>
                </picker>
            </view>
        </view>

        <view class="cash-box">
            <view class="all-cash fl-left">总金额：￥{{cost}}</view>
            <view class="Frozen-cash fl-right">冻结金额：￥300.00</view>
            <!-- <text>自动冻结金额1000元</text> -->
        </view>
        <view  class="section">
            <view class="detailed-info">
                <view>运输地址：</view>
                <picker value="0" bindchange="bindAddressChange" range="{{addrs}}" range-key="alias">
                    <view class="picker">
                        {{addrs[current_addr].address}}
                    </view>
                    <!-- <input placeholder="运输地址" value="{{addrs[current_addr].address}}"  name="address"/> -->
                </picker>

            </view>
        </view>
        <view class="section">
            <view class="picker">
                <view class="section__title">送达时间</view>
                <input type="text" disabled name="time" value="{{date}}" bindtap="datetimePicker" />
            </view>
        </view>
        <view class="section">
            <view class="section__title">联系手机</view>
            <input placeholder="请填写现场人员电话" name="phone" value="{{addrs[current_addr].phone}}" />
        </view>
        <view class="section">
            <view class="section__title">备注信息</view>
            <input placeholder="请填写备注信息" name="remarks" placeholder-style="z-index:1"/>
        </view>
    </view>
    <button class="submit-order" formType="submit">提交订单</button>
</form>

<block wx:if="{{picker_hidden}}">
    <view class="datetime-picker" style="position: fixed;bottom: 0;">
        <picker-view indicator-style="height: 50px;" style="width: 100%; height: 300px;" value="{{date}}" bindchange="bindDateChange">
            <picker-view-column>
                <view wx:for="{{years}}" wx:key="key" style="line-height: 50px">{{item}}年</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{months}}" wx:key="key" style="line-height: 50px">{{item}}月</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{days}}" wx:key="key" style="line-height: 50px">{{item}}日</view>
            </picker-view-column>
            <picker-view-column>
                <view wx:for="{{hour}}" wx:key="key" style="line-height: 50px">{{item}}时</view>
            </picker-view-column>
        </picker-view>
    </view>
</block>

</view>
