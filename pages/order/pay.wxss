
.list-box{overflow: hidden;background: #fff;padding:0 15px;}
.list_info {display: block;overflow: hidden;clear: both;border-bottom: 1px dotted #e5e5e5;padding:10px 0;font-size: 15px;}
.list-right{float: right;}
.list-title{padding:10px 0 5px 0;font-weight: bold;font-size: 15px;}

.pay-btn .online-btn{margin:20px 5%;}
.pay-btn .line-btn,.pay-btn .deposit{width:90%;margin:0 5% 20px 5%;height: 38px;}
.line-btn{font-size: 15px;}

.public-mask{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background: rgba(68, 68, 68, 0.5);}
.mask-content{width:90%;background: #fff;overflow: hidden;position: absolute;top: 50%;margin-top:-148px;left:5%;}
.mask-title{font-size: 16px;padding:15px;}
.mask-info .reason{margin:10px 0 10px 15px;display: inline-block;}
.mask-btn .confirm-btn,.mask-btn .cancel-btn{float:left;width:40%;margin:0 5% 20px 5%;height:36px;line-height:36px;font-size:14px;letter-spacing:2px;}
.mask-btn .confirm-btn{background: #F13D3C;border:none;color: #fff;}
.mask-btn .cancel-btn{}
.mask-info{width:90%;padding:0 5%;margin-bottom: 20px;}
label{display: block;margin-bottom: 20px;}