<!--Forgot-password.wxml-->
<view class="container">
	<form bindsubmit="formSubmit" bindreset="formReset">
		<view class="forgot">
			<view class="section">
				<view class="section__title">密码</view>
				<input name="input" placeholder="密码" />
			</view>
			<view class="section">
				<view class="section__title">确认密码</view>
				<input name="input" placeholder="确认密码" />
			</view>
		</view>
		<button class="forgot-btn">提交</button>
	</form>
</view>
