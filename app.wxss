body{font-family: '微软雅黑';font-size: 15px;}
text, rich-text,{font-size:15px;line-height: 1.5}
.fl-left{float: left;}
.fl-right{float: right;}
navigator {display: inline-block;}
view{font-size: 15px;}


/*form*/
.public-bg{display: block;background: #eeeff3;min-height:100%;}
.public-fff{background: #fff;}
.form-box{background: #fff;width:100%;}
.section input{float: left;padding:5px 10px 5px 0;font-size:15px;}
.section{padding:5px 0;overflow: hidden;border-bottom: 1px solid #e5e5e5;line-height: 38px;margin-left:15px;}
.section:last-child{border:none;}
.section__title{float: left;width: 80px;font-size: 15px;line-height: 36px;}
.btn{font-size: 15px;background: #F13D3C;color: #fff;border:none;width: 200px;clear: both;margin:20px auto;}
.btn-big{width:90%;}
.btn.btn-white{background: #fff;color: #000;}


/*bottom-tabbar*/
.bottom-tabbar{border-top:1px solid #e5e5e5;padding:3px 0;overflow: hidden;margin-top: 20px;position: fixed;bottom:0;width: 100%;background: #fff;}
.tabbar-info{width:33.33%;float: left;text-align: center;}
.tabbar-info image{width: 25px;height: 25px;}
.icon-title{font-size: 12px;color: #999;}
.bottom-icon{height: 26px;}

page{height:100%;}
.container{min-height: 100%;}

/*order*/
.order-stitle{width: 70px;display: inline-block;}
.order-box{margin-bottom:10px;padding:10px 15px;background: #fff;}
.order-box view{line-height: 30px;font-size:15px;}
.sel-time{margin-bottom: 10px;}

.notice{font-size: 12px;color: #888;padding:20px 0 10px 15px;}
.link {color: rgb(72,143,236);}
.text-center{text-align: center;}
.list-box .list_info .list-right{font-size: 13px;color:#999;padding-top:2px;}
.main-color{color: #F13D3C !important;}
.main-state{color: #037cfc !important}